<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="KeepSettingsDlg" Width="370" Height="270" Title="[ProductName] Setup" NoMinimize="yes">

        <Control Id="UseSettings" Type="CheckBox" X="45" Y="110" Width="220" Height="15" CheckBoxValue="1" Property="USEEXISTINGCONFIGURATION" Text ="&amp;Use existing configuration">
          <Condition Action="show" >CONFIGURATIONEXISTS</Condition>
          <Condition Action="hide">NOT CONFIGURATIONEXISTS</Condition>
        </Control>
        <Control Id="KeepSettings" Type="CheckBox" X="45" Y="110" Width="220" Height="15" CheckBoxValue="1" Property="KEEPSETTINGS" Text ="&amp;Keep settings files after unistall">
          <Condition Action="show">WixUI_InstallMode = "Remove"</Condition>
          <Condition Action="hide"><![CDATA[WixUI_InstallMode <> "Remove"]]></Condition>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back"/>         
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="&amp;Next"/>

        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish> 
        </Control>
        
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" 
                 Text="WixUI_Bmp_Banner" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Please enter your customer information</Text>
        </Control>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Customer Information</Text> 
        </Control>  
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
      </Dialog>
    </UI> 
  </Fragment>
</Wix>