{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "lib": ["es2019", "dom"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "mocha"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    }
}
