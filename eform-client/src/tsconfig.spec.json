{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "types": ["vitest/globals", "node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "polyfills.ts",
    "test-setup.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "test-helpers.ts"
  ],
  "angularCompilerOptions": {
    "strictTemplates": false,
    "fullTemplateTypeCheck": false
  }
}
